<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_page_one_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="This is Page One title."
        android:textStyle="normal"
        android:gravity="center_vertical"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"/>

    <LinearLayout
        android:id="@+id/ll_page_one_fun_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_page_one_title"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_page_one_1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Exec Basics"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_page_one_2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:text="GrammarArray"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_page_one_3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:text="Exec PP Notify"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_page_one_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textSize="15sp"
        android:scrollbars="vertical"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/ll_page_one_fun_layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>
